{
	"name": "gcs-radio",
	"version": "1.2.1",
	"description": "",
	"main": "src/backend/index.ts",
	"scripts": {
		"start": "node build/backend/index.js",
		"dev:full": "npm-run-all --parallel watch dev",
		"dev": "nodemon -e ts --exec \"npm run build:backend:serve\"",
		"watch": "webpack --config src/webpack.config.js --watch",
		"build:production": "sed -i 's/development/production/' src/webpack.config.js ; npm run build ; sed -i 's/production/development/' src/webpack.config.js ;",
		"build:frontend": "webpack --config src/webpack.config.js",
		"build:backend": "tsc && mv build/backend/* build/ && rm -r build/backend/",
		"build:backend:serve": "npm run build:backend && node build/index.js",
		"build": "npm run build:frontend && npm run build:backend",
		"clean": "rimraf build",
		"rebuild": "npm run build",
		"prerebuild": "npm run clean",
		"prebuild": "npm run lint",
		"test": "jest --colors --verbose",
		"lint": "eslint \"src/**/*.[jt]s\" --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@gitlab.com/brennanwilkes/gcs-radio.git"
	},
	"author": "Brennan Wilkes <brennan@codexwilkes.com>",
	"license": "ISC",
	"bugs": {
		"url": "https://gitlab.com/brennanwilkes/gcs-radio/issues"
	},
	"homepage": "https://gitlab.com/brennanwilkes/gcs-radio#readme",
	"dependencies": {
		"@babel/core": "^7.12.10",
		"@babel/preset-env": "^7.12.11",
		"@babel/preset-react": "^7.12.10",
		"babel-loader": "^8.2.2",
		"css-loader": "^5.0.1",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-validator": "^6.9.2",
		"prop-types": "^15.7.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-icons": "^4.1.0",
		"style-loader": "^2.0.0"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.22",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@typescript-eslint/eslint-plugin": "^4.14.2",
		"@typescript-eslint/parser": "^4.14.2",
		"eslint": "^7.19.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react": "^7.22.0",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"jest-junit": "^12.0.0",
		"jsdoc": "^3.6.6",
		"lint-staged": "^10.5.3",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"supertest": "^6.1.3",
		"ts-jest": "^26.5.0",
		"ts-loader": "^8.0.14",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix"
	}
}
